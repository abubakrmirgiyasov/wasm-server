@model IEnumerable<PersonData>

@{
    ViewData["Title"] = "Privacy Policy";
}
<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <table class="table">
      <thead class="thead-dark">
        <tr>
          <th scope="col">#</th>
          <th scope="col"><a asp-action="About" asp-route-sort="@ViewData["FirstNameSort"]">@Html.DisplayNameFor(f => f.FirstName)</a></th>
          <th scope="col"><a asp-action="About" asp-route-sort="@ViewData["LastNameSort"]">@Html.DisplayNameFor(f => f.LastName)</a></th>
          <th scope="col">Email</th>
        </tr>
      </thead>
      <tbody>
            @{
              int i = 1;
              foreach (var item in Model)
              {
                  <tr>
                    <th scope="row">@(i++)</th>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.Email</td>
                  </tr>
              }
            }
        </tbody>
    </table>
</div>
